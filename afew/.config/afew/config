#default filter chain
[SpamFilter]
[KillThreadsFilter]
[ListMailsFilter]
[SentMailsFilter]
sent_tag = sent
[ArchiveSentMailsFilter]

[Filter.1]
message = "Sentry"
query = from:"sentry@sentry02.ams1.uniregistrar.net"
tags = +sentry;+unread;-new

# Filters above this NotifyFilter that remove the 'new' tag will not trigger
# notification.
[NotifyFilter]

[Filter.3]
message = "Jira"
query = from:"jira@uniregistry.com"
tags = +jira;+unread;-new

[Filter.2]
message = "Mark unread, remove new"
tags = +unread;-new

# [InboxFilter]